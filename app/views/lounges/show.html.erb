<!--For a single Lounge/Subpage-->
<p id="notice"><%= notice %></p>

<h2><%= @lounge.name %></h2>

<p>
  <b>Description:</b>
  <%= @lounge.description %>
</p>

<p><%= link_to 'Submit a Post', new_post_path(lounge_id: @lounge) %></p>
<br>
<table>	
	<div id="post_container">
		<%= render(@lounge.posts) %>
	</div>
</table>





