<tr>
	<% if current_post == post %>
	<div id = "active-likes">
	<% else %>
	<div>
	<% end %>
		<%= render :partial => 'likes/like_count_and_heart', :locals => { :post => post } %>
	</div>

	<td><div class="post-image"><%= image_tag post.photo.url(:thumb) %></div></td>
	<td><%= link_to post.subject, post_path(post.id) %></td>
</tr>