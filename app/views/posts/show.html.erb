<div class="row-fluid row">	
	<div class="span8 span-fixed-sidebar">
		<div class="hero-unit">
			<table style="margin-top:-10px;">
				<tr>
					<div id="like-view" style="display:inline-block; padding-right:10px"><%= render :partial => 'posts/like_count_and_heart',  :locals => {:post => @post} %></div>
					<td style="padding-left:10px">
						<span class="subject-heading"><%= @post.subject %></span>
						<div>by <%= @post.author %>, <i>submitted <%= time_ago_in_words(@post.created_at) %> ago</i></div>
					</td>
				</tr>
			</table>
			
		  <br><b>Comments:</b>
			<p>
				<% if current_user %>
					<%= render :partial => 'comments/form' %>	
				<% else %>
					Please <%= link_to 'sign in', new_user_session_path %> to make a comment
				<% end %>
			</p>			
			<table class="comments">	
					<%= render :partial => 'comments/comment', :collection => @post.comments %>
			</table>
			
		</div>
	</div>

	<div class="span4">
		<div class="well sidebar-nav-fixed-400">
			<%= image_tag @post.photo.url(:medium) %>
			<br><br>
			<p>
			  <b>Description:</b>
			  <%= @post.description %>
			</p>
			
			<br>
			<!--Edit link only shows up for the user that created the post-->
			<% if current_admin || (!current_user.nil? && (current_user.id ==  @post.user_id)) %>
				<%= link_to 'Edit Post', edit_post_path(@post) %> &nbsp;&nbsp;
				<%= link_to 'Delete Post', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
				<br><br>
			<% end %>
			<%= link_to 'Back to Lounge', lounge_path(@post.lounge_id) %>
						
		</div>
	</div>

</div>



