<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
	<div class="field">
		<%= f.label :photo %>
		<%= f.file_field :photo %>
	</div>
	<%= f.hidden_field :lounge_id, :value => @lounge.id %>  <!--track lounge-->

  <div class="actions">
    <%= f.submit "Submit Post"%>
  </div>
<% end %>
