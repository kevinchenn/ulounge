
<td><div class="like-count"><%= post.likes.count %></div></td>
<td>
	<% if current_user.nil? %>
		<div class="like-image"><%= link_to image_tag("grey heart.png", mouseover: "red heart.png"), 
			new_user_session_path %></div>
	<% else %>
		<% @like = current_user.likes.find_by_post_id(post.id) %>
		<% if @like.nil?%>
			<div class="like-image"><%= link_to image_tag("grey heart.png", mouseover: "red heart.png"), {:controller => 'lounges', :action => 'like', :post_id => post.id, :user_id => current_user.id}, {:remote => true } %></div>
		<% else %>
			<div class="like-image"><%= link_to image_tag("red heart.png", mouseover: "grey heart.png"), @like, {:method => :delete} %></div>
		<% end %>
	<% end %>
</td>

